<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/generate_account_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText
        android:id="@+id/edit_generate_account_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="100dp"
        android:hint="Name" />

    <EditText
        android:id="@+id/tv_generate_account_pubkey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Public Key"
        android:editable="false"
        android:text="da4sdsa4d4as4da4sda4sdada8s45fds4f5ds6f54sd645fs6d4f6s5d4f6sds="
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/tv_generate_account_privkey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Private Key"
        android:editable="false"
        android:text="da4sdsa4d4as4da4sda4sdada8s45fds4f5ds6f54sd645fs6d4f6s5d4f6sds="
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:textSize="20sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/generate_submit_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SUBMIT" />

        <Button
            android:id="@+id/generate_cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CANCEL" />
    </LinearLayout>
</LinearLayout>